import java.io.*;
import java.util.ArrayList;
import java.util.List;

public class EditProfile {
    private static final String CSV_FILE = "users.csv"; //From register user

    // Method to update the username
    public boolean updateUsername(String oldUsername, String newUsername) {
        List<String[]> users = readUsersFromCSV();
        for (String[] user : users) {
            if (user[0].equals(oldUsername)) {
                user[0] = newUsername; // Update the username
                writeUsersToCSV(users); // Save changes to the CSV file
                return true;
            }
        }
        return false; // Username not found
    }

    // Method to update the password
    public boolean updatePassword(String username, String oldPassword, String newPassword) {
        List<String[]> users = readUsersFromCSV();
        for (String[] user : users) {
            if (user[0].equals(username) && user[1].equals(oldPassword)) {
                user[1] = newPassword; // Update the password
                writeUsersToCSV(users); // Save changes to the CSV file
                return true;
            }
        }
        return false; // Username or old password incorrect
    }

    private List<String[]> readUsersFromCSV() {
        List<String[]> users = new ArrayList<>();
        try (BufferedReader reader = new BufferedReader(new FileReader(CSV_FILE))) {
            String line;
            while ((line = reader.readLine()) != null) {
                String[] userData = line.split(",");
                users.add(userData);
            }
        } catch (IOException e) {
            System.err.println("Error reading from CSV file: " + e.getMessage());
        }
        return users;
    }

    private void writeUsersToCSV(List<String[]> users) {
        try (FileWriter writer = new FileWriter(CSV_FILE))) {
            for (String[] user : users) {
                writer.append(String.join(",", user)).append("\n");
            }
        } catch (IOException e) {
            System.err.println("Error writing to CSV file: " + e.getMessage());
        }
    }
}