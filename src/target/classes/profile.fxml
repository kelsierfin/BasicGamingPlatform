<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15" styleClass="profile-vbox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.ucalgary.seng.p3.ProfileController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
    <Label text="Username"/>
    <TextField fx:id="usernameField" text="User_1" editable="false"/>
    <Label text="Email"/>
    <TextField fx:id="emailField" text="user_1@example.com"/>
    <Label text="Bio"/>
    <TextArea fx:id="bioArea" text="Hi! I love Chess !!" prefRowCount="3" prefColumnCount="20"/>
    <Label text="Change Password"/>
    <PasswordField fx:id="currentPassField" promptText="Current Password"/>
    <PasswordField fx:id="newPassField" promptText="New Password"/>
    <Button fx:id="changeAvatarButton" text="Change Avatar" onAction="#handleChangeAvatar"/>
    <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"/>
</VBox>