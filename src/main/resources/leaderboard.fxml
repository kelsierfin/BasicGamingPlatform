<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import ca.ucalgary.seng.p3.NavigationBar?>
<?import javafx.scene.layout.AnchorPane?>

<fx:root type="StackPane" xmlns:fx="http://javafx.com/fxml" maxHeight="600" maxWidth="900" minHeight="600" minWidth="900" prefHeight="600.0"
         prefWidth="900.0" alignment="TOP_CENTER">
    <VBox  spacing="20.0">

        <padding>
            <Insets bottom="20.0" top="120"/>
        </padding>

        <GridPane  fx:id="rankList" vgap="20" style="-fx-padding: 40 0 0 0" >
            <columnConstraints>
                <ColumnConstraints percentWidth="12.5"/>
                <ColumnConstraints percentWidth="12.5" />
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>
            <children>
                <Label fx:id="nameRanking" text="NAME" style="-fx-font-size: 18" textFill="aliceblue">
                    <GridPane.columnIndex>2</GridPane.columnIndex>
                    <GridPane.rowIndex>0</GridPane.rowIndex>
                </Label>
                <Label fx:id="pointsRanking" text="POINTS" style="-fx-font-size: 18" textFill="aliceblue">
                    <GridPane.columnIndex>3</GridPane.columnIndex>
                    <GridPane.rowIndex>0</GridPane.rowIndex>
                </Label>
                <Label fx:id="winRateRanking" text="WINNING RATE" style="-fx-font-size: 18" textFill="aliceblue">
                    <GridPane.columnIndex>4</GridPane.columnIndex>
                    <GridPane.rowIndex>0</GridPane.rowIndex>
                </Label>
            </children>

        </GridPane>
    </VBox>
    <NavigationBar fx:id="navBar"/>
</fx:root>

