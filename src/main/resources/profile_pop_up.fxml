<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<DialogPane style="-fx-background-color: #cd8bca" xmlns:fx="http://javafx.com/fxml" prefWidth="300" prefHeight="300">
    <content>
        <VBox spacing="10">
            <HBox spacing="10">
                <ImageView fx:id="avaPopUp"/>
                <VBox>
                    <Label fx:id="userNamePopUp"/>
                    <Label fx:id="bioPopUp"/>
                </VBox>
            </HBox>
            <HBox>
                <Label text="Matches played: "/>
                <Label fx:id="matchesPopUp"/>
            </HBox>

            <HBox>
                <Label text="Winnings: "/>
                <Label fx:id="winningsPopUp"/>
            </HBox>

            <HBox>
                <Label text="Losses: "/>
                <Label fx:id="lossPopUp"/>
            </HBox>


        </VBox>

    </content>
    <ButtonType text="OK" buttonData="OK_DONE"/>
</DialogPane>
