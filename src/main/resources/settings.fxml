        <?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.layout.BorderPane?>
        <?import javafx.scene.layout.VBox?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.geometry.Insets?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.ucalgary.seng.p3.SettingsController">
    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #333333; -fx-padding: 10px;">
