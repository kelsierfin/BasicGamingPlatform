<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.ucalgary.seng.p3.Connect4Controller"
            stylesheets="@connect4styles.css">
    <top>
        <HBox alignment="CENTER" styleClass="header-bar">
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" spacing="10">
                <Circle fx:id="player1Icon" radius="20" styleClass="player1-token"/>
                <Label fx:id="player1Name" text="Alex" styleClass="player-name"/>
                <Label fx:id="timer" text="3:30" styleClass="timer"/>
            </HBox>

            <Label text="Connect 4" styleClass="game-title"/>

            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" spacing="10">
                <Label fx:id="player2Name" text="Nightowl" styleClass="player-name"/>
                <Circle fx:id="player2Icon" radius="20" styleClass="player2-token"/>
            </HBox>

            <padding>
                <Insets top="15" right="25" bottom="15" left="25"/>
            </padding>
        </HBox>
    </top>

    <center>
        <StackPane alignment="CENTER">
            <Rectangle fx:id="gameBackground" styleClass="game-board-background" arcWidth="30" arcHeight="30"/>
            <GridPane fx:id="gameBoard" alignment="CENTER" hgap="8" vgap="8">
                <!-- The game board will be populated programmatically in the controller -->
            </GridPane>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" styleClass="footer-bar">
            <Button fx:id="abortGameButton" text="Abort Game" styleClass="game-button" onAction="#handleAbortGame"/>
            <Button fx:id="newGameButton" text="New Game" styleClass="game-button" onAction="#handleNewGame"/>
            <padding>
                <Insets top="15" right="25" bottom="15" left="25"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>